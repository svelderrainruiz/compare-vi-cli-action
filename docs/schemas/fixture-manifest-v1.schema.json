{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://labview-community-ci-cd.github.io/schemas/fixture-manifest-v1.schema.json",
  "title": "Fixture Manifest v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema", "generatedAt", "items"],
  "properties": {
    "schema": { "const": "fixture-manifest-v1" },
    "generatedAt": { "type": "string", "format": "date-time" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256", "bytes", "role"],
        "properties": {
          "path": { "type": "string", "pattern": "^VI[0-9]+\\.vi$" },
          "sha256": { "type": "string", "pattern": "^[A-Fa-f0-9]{64}$" },
          "bytes": { "type": "integer", "minimum": 1 },
          "role": { "type": "string", "enum": ["base", "head"] }
        }
      }
    }
  }
}
