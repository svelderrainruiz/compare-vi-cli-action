{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://labview-community-ci-cd.github.io/compare-vi-cli-action/schemas/fixture-drift-summary-v1.schema.json",
  "title": "Fixture Drift Summary (v1)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema": { "const": "fixture-drift-summary-v1" },
    "generatedAtUtc": { "type": "string" },
    "status": { "type": "string", "enum": ["ok", "drift", "fail-structural", ""] },
    "exitCode": { "type": "integer" },
    "categories": {
      "type": "array",
      "items": { "type": "string" }
    },
    "artifactPaths": {
      "type": "array",
      "items": { "type": "string" }
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string" },
          "lastWriteTimeUtc": { "type": "string" },
          "length": { "type": "integer", "minimum": 0 }
        },
        "required": ["path", "lastWriteTimeUtc"]
      }
    }
  },
  "required": ["schema", "generatedAtUtc", "status", "exitCode", "categories", "artifactPaths", "notes", "files"]
}
